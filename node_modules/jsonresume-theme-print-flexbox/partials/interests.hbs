{{#if resume.interests.length}}
<section class="container vertical">
	<h2>Interests</h2>

    <div class="container horizontal">
        {{#each resume.interests}}
        <article>
            {{#if name}}
            <h3>{{name}}</h3>
            {{/if}}
            {{#if keywords.length}}
            <ul class="element">
                {{#each keywords}}
                <li>{{.}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </article>
        {{/each}}
    </div>
</section>
{{/if}}