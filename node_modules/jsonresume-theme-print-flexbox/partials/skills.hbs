{{#if resume.skills.length}}
<section class="container vertical">
	<h2>Skills</h2>

    <div class="container horizontal">
        {{#each resume.skills}}
        <article>
            {{#if name}}
            <h3>{{name}}</h3>
            {{/if}}

            {{#if level}}
            <div class="element">{{level}}</div>
            {{/if}}
            {{#if keywords.length}}
            <ul class="element">
                {{#each keywords}}
                <li>{{.}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </article>
        {{/each}}
    </div>
</section>
{{/if}}