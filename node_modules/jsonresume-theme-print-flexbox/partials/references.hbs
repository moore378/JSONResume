{{#if resume.references.length}}
<section class="container vertical">
	<h2>References</h2>

	{{#each resume.references}}
	<article>
        {{#if name}}
        <h3>{{name}}</h3>
        {{/if}}
		{{#if reference}}
		<blockquote class="element">
			{{reference}}
		</blockquote>
		{{/if}}
	</article>
	{{/each}}
</section>
{{/if}}