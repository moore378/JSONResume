{{#if resume.education.length}}
<section class="container vertical">
	<h2>Education</h2>

	{{#each resume.education}}
    <article>
        {{#if area}}
        <h3>{{area}}</h3>
        {{/if}}
        {{#if institution}}
        <div class="element">
            {{#if website}}
            <a href="{{website}}" data-print="url"><span class="emphasis">{{institution}}</span></a>
            {{else}}
            <span class="emphasis">{{institution}}</span>
            {{/if}}
            {{buildPeriod this 'startDate' 'endDate'}}
        </div>
        {{/if}}

        {{#if studyType}}
        <div class="element">
            Study type: {{studyType}}
        </div>
        {{/if}}
        {{#if gpa}}
        <div class="element">
            GPA: {{gpa}}
        </div>
        {{/if}}
        {{#if courses.length}}
        <ul class="element">
            {{#each courses}}
            <li>{{.}}</li>
            {{/each}}
        </ul>
        {{/if}}
    </article>
	{{/each}}
</section>
{{/if}}